<h1 class="m-4"> Boards</h1>
<div class="d-flex flex-wrap p-2  mx-2">
<% @boards.each do |board| %>
   <div class="card m-4" style="width: 18rem;">
      <div class="card-body">
         <%= link_to board_path(board) do %>
         <h5 class="card-title"><%= board.name %></h5>
         <% end %>
      
         <%= link_to "Edit", edit_board_path(board), class: "btn btn-primary" %>

         <%= link_to "Delete", board_path(board), data: { "turbo-method": :delete }, class: "btn btn-danger m-2"%>
           
      </div>
   </div>
<% end %>
</div>