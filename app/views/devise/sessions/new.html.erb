<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Login</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <form>
              <%= render "devise/shared/error_messages", resource: resource %>
              
              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
                <%= f.label :email, class: "form-label" %>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
                <%= f.label :password, class: "form-label" %>
              </div>

              <!-- Checkbox -->
              <% if devise_mapping.rememberable? %>
                <div class="form-check d-flex justify-content-center mb-4">
                  <%= f.check_box :remember_me, class: "form-check-input me-2" %>
                  <%= f.label :remember_me, class: "form-check-label"%>
                </div>
              <% end %>

              <!-- Submit button -->
              <%= f.submit "Log in", class: "btn btn-primary btn-block mb-4" %><br/>

            <%= render "devise/shared/links" %>
            <% end %>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://source.unsplash.com/random/600Ã—800" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->